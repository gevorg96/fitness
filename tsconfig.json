{
  "compilerOptions": {
    "lib": ["ES2020"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "target": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
